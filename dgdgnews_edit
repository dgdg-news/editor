  <script>
    function saveContent() {
      const content = document.getElementById('editorInput').value;
      localStorage.setItem('savedNewsletterContent', content);
      alert('ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!');
    }

    function loadContent() {
      const content = localStorage.getItem('savedNewsletterContent');
      if (content) {
        document.getElementById('editorInput').value = content;
      } else {
        alert('ì €ì¥ëœ ë‚´ìš©ì´ ì—†ìŠµë‹ˆë‹¤.');
      }
    }

    function clearContent() {
      localStorage.removeItem('savedNewsletterContent');
